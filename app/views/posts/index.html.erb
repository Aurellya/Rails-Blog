<% content_for :page_title, "My Blog" %>
<section class="section">
  <div class="container" style="width:90%">
    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"><%= link_to post.title, post, class: "has-text-dark"%></p>
              <p class="subtitle is-6">created_at: <%= post.created_at.utc.strftime("%d/%m/%Y")%></p>
            </div>
          </div>
          <div class="content">
            <%= post.content.truncate_words(80)%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
